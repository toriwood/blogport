<p class="back">
<%= link_to "Home", root_path %><br>
<%= link_to "Create a new entry here!", new_post_path %>
</p>

<h1 class="super-title">All Blog Posts</h1>

<% @posts.each do |post| %>
	
	<h1><%= link_to post.title, post_path(post) %></h1>
	<h2><%= post.created_at.in_time_zone("Eastern Time (US & Canada)").strftime("%b %d, %Y | %I:%M%p") %></h2>
	<p><%= h(post.text).gsub(/\n/, '<br/>').html_safe %></p>

<% end %>
