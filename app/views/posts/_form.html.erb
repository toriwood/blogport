<%= form_for :post, url: posts_path do |f| %> 
	
	<p>
    <%= f.label :title %><br>
    <%= f.text_field :title, :class => "text-input" %>
  </p>
 
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text, :class => "text-input" %>
  </p>
 
  <p>
    <%= f.submit "Create Entry", :class => "button" %>
  </p>

<% end %>